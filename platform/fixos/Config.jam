rule PDCLibTargetConfig { }
rule PDCLibTargetHeaders {
    SubDirHdrs $(PDCLIB_TOP) platform fixos includes ;
    SubDirHdrs $(PDCLIB_TOP) platform fixos internals ;
}

if $(PDCLIB_TOOLCHAIN) = "gcc" {
    PDCLIB_TEST_LINKFLAGS += -nostdlib ;
    PDCLIB_TEST_LINKLIBS += -lgcc ;
    OPTIM = -Os ;
}

PDCLIB_OPTIONS = 
	nothread 
	notime 
	dlmalloc 
	tss_errno 
	basecodecs 
	c_locale 
	;
